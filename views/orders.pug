extends layout

block content
    table(class="table table-hover")
        thead
            tr
                th ID
                th Customer name
                th Price
                th currency_type
                th deliver_adr
                th payment_type
                th payment_state
                th State
                th Created Date
        tbody
            each order in orders
                tr
                    td #{order.id}
                    td #{order.name}
                    td #{order.price}
                    td #{order.currency_type}
                    td #{order.deliver_adr}
                    td #{order.payment_type}
                    td #{order.payment_state}
                    td #{order.order_state}
                    td #{order.created_at}
    //- p Welcome #{JSON.stringify(user)}
block pagination
    include paginator
    +paginator(total, `/orders/`)