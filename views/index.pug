extends layout

block content
    div(class="index")
        p(style="text-align: center;") Welcome to #{title}
        span Permissions: 
        if authentication
            span(class="text-success") create, read, update, delete
        else
            span(class="text-danger") read only
            form(action="token" method="post")
                input(class="form-control form-control-sm" type="text", name="token") 
                button(class="btn btn-primary my-3" type="submit") Submit access token
        div 
            span Server: 
            a(href=server.url target="blank") #{server.url}
            span  status 
            if server.status == 200
                span(class="text-success") online 
                //- span(class="online-status")
            else
                span(class="text-danger") offline
                //- span(class="online-status")
        if authentication
            form(action="/secret_upload", method="post", enctype="multipart/form-data")
                span Visa cert/key: 
                input(type="file" name="file")
                button(class="btn btn-primary btn-sm my-3 col-2" type="submit") Upload
