extends layout

block content
    form(action="/categoryCreate" method="post")
        table(class="table table-hover")
            thead
                tr
                    th id
                    th name
                    th action
            tbody
                tr
                    td 
                    td 
                        input(class="form-control form-control-sm" type="text", id="name" name="name") 
                    td 
                        button(class="btn btn-primary btn-sm"  type="submit" disabled=!authentication) Create
                each category in categories
                    tr
                        td #{category.id}
                        td #{category.name}
                        block tableActions
                            include tableActions
                            +tableActions({category})
