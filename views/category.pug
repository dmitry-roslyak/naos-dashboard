extends layout

block content
    <div class="alert alert-warning" role="alert">
        | Category update currently disabled
    </div>
    form(action=`/category/${category.id}/edit` method="post")
        label(for="name") name
        input(class="form-control form-control-sm" type="text" id="name" name="name" value=category.name) 
        button(class="btn btn-primary btn-sm my-3"  type="submit" disabled=true) Update
